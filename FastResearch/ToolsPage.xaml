<Page
    x:Class="FastResearch.ToolsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FastResearch.Model"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <DataTemplate x:Key="CommandItem" x:DataType="local:Command">
            <Button Content="{x:Bind name}" FontWeight="Bold"/>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Button Content="+" Click="NewButton_Click" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <GridView ItemsSource="{x:Bind ViewModel.CommandItems}" ItemTemplate="{StaticResource CommandItem}"
          IsItemClickEnabled="True"
          Margin="25,127,26,25">

        </GridView>
    </Grid>
</Page>
